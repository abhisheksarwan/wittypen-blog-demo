<%- include("partials/header") -%>
<div class="ui main text container segment">
    <div class="ui huge header">Edit New Blog</div>
    <form class="ui form" action="/blog/<%= blog._id %>?_method=PUT" method="POST"> <!-- method override as PUT not supported-->
        <div class="field">
            <label>Name</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>" required> <!-- using[] makes an object-->
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>" required>
        </div>
        <div class="field">
            <label>Description</label>
            <textarea name="blog[body]" required><%= blog.body %></textarea>
        </div>
        <input class="ui blue basic button" type="submit">
    </form>
</div>
<%- include("partials/footer") -%>