<%- include("partials/header") -%>

<div class="ui main text container">
    <div class="ui huge header">WittyPen</div>
    <div class="ui top attached segment">
        <div class="ui divided items">

            <% blogs.forEach(function(blog){ %>
 
            <div class="item">
                <div class="image">
                    <img src="<%= blog.image %>" height="200">
                </div>
                <div class="content">
                    <a class="header" href="/blog/<%= blog._id %>"> <%= blog.title %> </a>
                    <div class="meta">
                        <span><%= blog.created.toDateString() %></span>
                    </div>
                    <div class="description">
                        <p><%- blog.body.substring(0, 50) %>....</p>
                    </div>
                    <div class="extra">
                        <a class="ui floated button basic blue" href="/blog/<%= blog._id %>">Read More</a>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>
</div>
<%- include("partials/footer") -%>